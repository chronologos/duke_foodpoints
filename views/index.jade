doctype
html(lang='en')
  head
    title FoodPoints+
    meta(charset='utf-8')

    script(src="https://code.jquery.com/jquery-1.10.2.min.js")
    script(src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js")
    script(src='//cdnjs.cloudflare.com/ajax/libs/moment.js/2.8.2/moment.min.js')
    script(type='text/javascript' src='//cdnjs.cloudflare.com/ajax/libs/d3/3.4.11/d3.min.js')
    script(type='text/javascript' src='//cdnjs.cloudflare.com/ajax/libs/c3/0.3.0/c3.js') 
    script(type="text/javascript" src='//cdn.jsdelivr.net/cal-heatmap/3.4.0/cal-heatmap.js')
    script(src='ga.js')
    script(src="countdown.js")
    script(src='utility.js')
    
    link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.2.0/superhero/bootstrap.min.css", rel="stylesheet")
    //link(href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css", rel="stylesheet")
    link(href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css", rel="stylesheet")
    link(rel="stylesheet", href='//cdn.jsdelivr.net/cal-heatmap/3.4.0/cal-heatmap.css')
    link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/c3/0.3.0/c3.css')

    script.
      var user =!{JSON.stringify(user)}
    style.
      .c3-tooltip { color:#000; }

  body
    .container
      h1 FoodPoints+
      if (user)
        a.btn.btn-primary(href=auth_link) Link DukeCard
      else
        h3 Using FoodPoints+ is easy!  Just enter your email and click the link sent.
        form(action='/sendtoken', method="POST")
          input(name='user', class="form-control", type='email')
          input(type='submit', class='btn btn-default', value="Login")
      a.btn.btn-info(href="https://dco3.auxserv.duke.edu/onlineoffice", target="_blank") DukeCard Office
      a.btn.btn-success(href="/whatsopen") What's Open?
      hr
      .row
        .col-md-6
          h3 Countdown
          p You started at:
          input.form-control#plan(type="text")
          hr
          p You should have:
          div.progress
            div#progbar.progress-bar.progress-bar-default.progress-bar-striped.active
              div#result
        if (user)
          .col-md-3
            h3 Balances
            table.table
              tr
                th Date
                th Balance
              each b in user.balances
                tr
                  td.format=b.date
                  td=b.balance.toFixed(2)
           .col-md-3
             h3 Transactions
             table.table
              tr
                th Date
                th Amount
              each b in user.exps
                tr
                  td.format=b.date
                  td=b.amount.toFixed(2)
           .col-md-12
             h3 Chart
             div#chart
             script(src='chart.js')
           .col-md-12
             h3 Heatmap
             div#cal-heatmap
             script(src='cal-heatmap.js')
